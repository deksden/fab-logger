{
  "name": "@fab33/fab-logger",
  "version": "1.0.1",
  "description": "Unified logging system with configurable transports, namespace filtering, and log levels",
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deksden/fab-logger.git"
  },
  "keywords": [
    "logging",
    "namespace",
    "debug",
    "log-levels",
    "pino",
    "file-logging",
    "log-rotation",
    "console-logging",
    "structured-logging",
    "colorized-output",
    "fab-logger",
    "@fab33",
    "multiple-transports",
    "typescript"
  ],
  "author": "(c) fab33,, by deksden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deksden/fab-logger/issues"
  },
  "homepage": "https://github.com/deksden/fab-logger#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "test": "dotenvx run -- vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "link:all": "npm link @fab33/sys-errors",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "get-tree": "tree -a -L 5 --matchdirs --ignore-case --dirsfirst --sort name -I 'node_modules|docs|.aider*|.idea*|_legacy*|.git|*logs*' > all-files-and-directories.txt",
    "repomix:all": "repomix",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "@fab33/fab-errors": "^1.0.3",
    "@fab33/tlogger": "^1.0.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.34.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^8.57.1",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^13.24.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "private": false
}
